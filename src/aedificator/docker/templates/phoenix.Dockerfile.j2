# Dockerfile for SL Phoenix
# Gerado automaticamente pelo Aedificator
# Vers√µes customizadas: Elixir {{ elixir_version }}, Erlang {{ erlang_version }}, Node.js {{ node_version }}

ARG ELIXIR_VERSION={{ elixir_version }}
ARG ERLANG_VERSION={{ erlang_version }}
ARG NODE_VERSION={{ node_version }}

# Build stage
FROM hexpm/elixir:${ELIXIR_VERSION}-erlang-${ERLANG_VERSION}-alpine-3.20.3 AS build

# Install build dependencies
RUN apk add --no-cache build-base git npm

# Install Node.js
RUN apk add --no-cache nodejs-current=${NODE_VERSION}

WORKDIR /app

# Install hex and rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Copy mix files
COPY mix.exs mix.lock ./
RUN mix deps.get --only prod
RUN mix deps.compile

# Copy application
COPY . .

# Install Node.js dependencies and build assets
RUN cd assets && npm ci && npm run deploy
RUN mix phx.digest

# Build release
RUN MIX_ENV=prod mix release

# Runtime stage
FROM alpine:3.20.3

RUN apk add --no-cache libstdc++ openssl ncurses-libs

WORKDIR /app

# Copy release from build stage
COPY --from=build /app/_build/prod/rel/sl_phoenix ./

# Expose port
EXPOSE 4000

# Default command
CMD ["bin/sl_phoenix", "start"]
