# docker-compose.yml - {{ stack_name }}
# Gerado automaticamente pelo Aedificator

services:

{% if include_superleme %}
  postgres:
    image: postgres:{{ postgres_version }}
    container_name: postgres
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: abensoft
      POSTGRES_DB: superleme
    volumes:
      - postgres_zotonic_data:/var/lib/postgresql/data
      - ./init-postgres.sh:/docker-entrypoint-initdb.d/init-postgres.sh:ro
    ports:
      - "15432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  zotonic:
    build:
      context: .
      dockerfile: Dockerfile.superleme
    depends_on:
      postgres:
        condition: service_healthy
    environment:
      ZOTONIC_DBHOST: postgres
      ZOTONIC_DBPORT: 15432
      ZOTONIC_DBUSER: postgres
      ZOTONIC_DBPASSWORD: abensoft
      ZOTONIC_DBDATABASE: superleme
      SHELL: /bin/bash
    ports:
      - "8000:8000"
      - "8443:8443"
    volumes:
      - .:/opt/zotonic
      - zotonic_build:/opt/zotonic/_build
    working_dir: /opt/zotonic
    user: "1000:1000"
    entrypoint: ""
    command: ["/bin/bash"]
{% endif %}

{% if include_phoenix %}
  phoenix:
    build:
      context: .
      dockerfile: Dockerfile.phoenix
    environment:
      DATABASE_URL: ecto://postgres:abensoft@postgres/superleme
      SECRET_KEY_BASE: {% raw %}${{SECRET_KEY_BASE:-changeme}}{% endraw %}
      PHX_HOST: localhost
      SHELL: /bin/bash
    ports:
      - "4000:4000"
    volumes:
      - .:/app
      - phoenix_deps:/app/deps
      - phoenix_build:/app/_build
    working_dir: /app
    command: sh -c "mix deps.get && mix compile && mix ecto.setup && mix phx.server"
{% endif %}

volumes:
  postgres_zotonic_data:
  zotonic_build:
{% if include_phoenix %}
  postgres_phoenix_data:
  phoenix_deps:
  phoenix_build:
{% endif %}
